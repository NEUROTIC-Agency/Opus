<div id="<%= dom_id job_application %>">
  <p class="my-5">
    <strong class="block mb-1 font-medium">Status:</strong>
    <%= job_application.status %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Seen:</strong>
    <%= job_application.seen %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Dealt with:</strong>
    <%= job_application.dealt_with %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Job:</strong>
    <%= job_application.job_id %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Candidate:</strong>
    <%= job_application.candidate_id %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Company:</strong>
    <%= job_application.company_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this job application", job_application, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this job application', edit_job_application_path(job_application), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
