<div class="w-full">
  <% if notice.present? %>
    <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex items-center justify-between">
    <h1 class="text-4xl font-bold">Companies</h1>
    <%= link_to 'New company', new_company_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="companies" class="relative min-w-full overflow-x-auto">
    <table class="w-full text-sm text-left text-gray-500">
      <thead class="text-xs text-gray-700 uppercase bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3">
            Name
          </th>
          <th scope="col" class="px-6 py-3">
            Plan
          </th>
          <th scope="col" class="px-6 py-3">
            Jobs
          </th>
          <th scope="col" class="px-6 py-3">
            Candidates
          </th>
          <th scope="col" class="px-6 py-3">
            Job Applications
          </th>
          <th scope="col" class="px-6 py-3">
            Tickets
          </th>
          <th scope="col" class="px-6 py-3">
            Status
          </th>
          <th scope="col" class="px-6 py-3">
            Edit
          </th>
        </tr>
      </thead>
      <tbody>
        <% @companies.each do |company| %>
          <tr class="bg-white border-b hover:bg-gray-50 hover:cursor-pointer">
            <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap ">
              <%= company.name %>
            </th>
            <td class="px-6 py-4">
              <%= company.plan %>
            </td>
            <td class="px-6 py-4">
              <%= link_to jobs_path do %>
                <%= company.jobs.count %>
              <% end %>
            </td>
            <td class="px-6 py-4">
              <%= company.candidates.count %>
            </td>
            <td class="px-6 py-4">
              <%= company.job_applications.count %>
            </td>
            <td class="px-6 py-4">
              <%= company.tickets.count %>
            </td>
            <td class="px-6 py-4">
              <%= company.hidden ? 'Hidden' : 'Visible' %>
            </td>
            <td class="px-6 py-4">
              <%= link_to 'Edit', edit_company_path(company), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
