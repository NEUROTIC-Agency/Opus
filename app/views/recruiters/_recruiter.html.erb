<div id="<%= dom_id recruiter %>">

  <p class="my-5">
    <strong class="block mb-1 font-medium">Recruiter:</strong>
    <%= recruiter.first_name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this recruiter", recruiter, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this recruiter', edit_recruiter_path(recruiter), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
