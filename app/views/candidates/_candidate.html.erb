<div id="<%= dom_id candidate %>">
  <p class="my-5">
    <strong class="block mb-1 font-medium">First name:</strong>
    <%= candidate.first_name %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Last name:</strong>
    <%= candidate.last_name %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Title:</strong>
    <%= candidate.title %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Location:</strong>
    <%= candidate.location %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this candidate", candidate_path(candidate), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this candidate', edit_candidate_path(candidate), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
